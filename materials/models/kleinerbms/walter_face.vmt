"VertexLitGeneric"
{
	// Original shader: VertexLitTexture
	"$basetexture" "models/kleinerbms/walter_face"
	"$lightwarptexture" "models\kleinerbms\Kleiner_wrp"
	"$bumpmap" "models/kleinerbms/walter_face_normal"
//	"$parallaxmap" "models/kleinerbms/walter_face_height"
//	"$parallaxmapscale" ".3844"
	//"$envmapsphere" 1
	"$halflambert" 1

// -- From here down is new stuff which will only be applied if $phong is set to 1 --
	"$phong" "1"
	"$phongexponenttexture" "models/kleinerbms/kleiner_bm_exponent.vtf"
        "$phongtint" "[.85 .85 1]"
