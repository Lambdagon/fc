"VertexLitGeneric"
{

	"$baseTexture" "models/weapons/c_models/lambda/c_shotgun/sight_glass"
	"$additive" "1"


	"$phong" "1"
	//comment out to use the exponent mask
	"$phongexponent" "512"
	"$phongboost" "10"
	
	//scales up the exponent texture which usually only has about 120 levels of exponent
//	"$phongexponentfactor"  "150"
	"$phongalbedotint" "0"
	
	//"$lightwarptexture" "models/lightwarps/softened_weapon_lightwarp"
	"$lightwarptexture" "models/lightwarps/weapon_lightwarp"
			
	"$phongfresnelranges"	"[.25 .5 1]"
	"$halflambert" "1"
	"$glowcolor" "1"
	
	"$envmap" "env_cubemap"
	"$envmaptint" "[.02 .02 .02]"
	
	"$tempvar" "0"

	//comment out to use the exponent mask
//	"$basephongexponent" "15"
	"$basephongboost" "10"

	"$basealphaenvmapmask" "1"
	"$basemapalphaphongmask" "1"
	
	"$rimlight" "1"						
	"$rimlightexponent" "20"				
	"$rimlightboost" "2"
//	"$rimmask" "1"
	

	// Cloaking
	"$cloakPassEnabled" "1"
	"$sheenPassEnabled" "1"

	"$sheenmap" 		"cubemaps/cubemap_sheen001"
	"$sheenmapmask" 		"Effects/AnimatedSheen/animatedsheen0"
	"$sheenmaptint" 		"[ 1 1 1 ]"
	"$sheenmapmaskframe" 	"0"
	"$sheenindex" 		"0"

	"$yellow" "0"

	"Proxies"
	{

		"AnimatedWeaponSheen"
		{
			"animatedtexturevar" 		"$sheenmapmask"
			"animatedtextureframenumvar" 	"$sheenmapmaskframe"
			"animatedtextureframerate" 		"40"
		}
		"invis"
		{
		}
		"ModelGlowColor"
		{
			"resultVar" "$glowcolor"
		}
		"Equals"
		{
			"srcVar1"  "$glowcolor"
			"resultVar" "$selfillumtint"
		}
		"Equals"
		{
			"srcVar1"  "$glowcolor"
			"resultVar" "$color2"
		}
		"YellowLevel"
		{
			"resultVar" "$yellow"
		}
		"Multiply"
		{
			"srcVar1" "$color2"
			"srcVar2" "$yellow"
			"resultVar" "$color2"
		}
	
		"WeaponSkin" {
		}
	}
}
