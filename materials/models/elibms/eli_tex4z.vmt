"VertexLitGeneric"
{
	// Original shader: VertexLitTexture
	"$basetexture" "models/elibms/eli_tex4z"
	"$lightwarptexture" "models\kleinerbms\Kleiner_wrp.vtf"
	"$bumpmap" "models/elibms/eli_head_normal"
	"$halflambert" 1
		"$nodecal" "1"

// -- From here down is new stuff which will only be applied if $phong is set to 1 --
	"$phong" "1"
	"$phongexponenttexture" "models/elibms/eli_bm_exponent.vtf"
        "$phongtint" "[0 0 0]"
	"$phongboost"	"1.3"
	"$phongfresnelranges"	"[0.05 0.5 1]"

// Rim lighting parameters
	"$rimlight" "1"				// To enable rim lighting (requires phong)
	"$rimlightexponent" "80"             // Exponent for phong component of rim lighting
	"$rimlightboost" ".5"	               // Boost for ambient cube component of rim lighting
}
