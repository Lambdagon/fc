"UnlitGeneric"
{
	"<dx90"
	{
		$outlinecolor "[0.9 0.9 0.8]"
	}
	
	"$translucent" 1
	"$baseTexture" "hud\gradient_brown"
	"$detail" "hud\clock_suddendeath_mask"
	$detailscale 1
	$detailblendmode 8
	$distancealphafromdetail 1

	// give it a slight outer soft edge
	$softedges 1
	$edgesoftnessstart 0.5
    $edgesoftnessend 0.4
	$scaleedgesoftnessbasedonscreenres 1

	// give it a white outline
	$outline 1
	$outlinecolor "[0.9 0.9 0.5]"
	$outlinestart0 0.4
	$outlinestart1 0.55
	$outlineend0 0.55
	$outlineend1 0.7
	$scaleoutlinesoftnessbasedonscreenres 1
	// and a drop shadow
	$glow 0
	$glowcolor "[0 0 0]"
	$glowalpha 0.5
	$glowstart 0
	$glowend 0.5
	$glowx -0.005
	$glowy -0.01


//	"$vertexcolor" 1
	$distancealpha 1
	"$no_fullbright" 1
	"$ignorez" 1
	"%keywords" "tf"
}

