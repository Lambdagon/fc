"VertexlitGeneric"
{
	"$baseTexture" "models\weapons\c_items/c_medigun_defense_blue"	
	"$detail" "models\weapons\c_items/c_medigun_defense_blue"	
	"$detailscale" "1"
	"$detailblendfactor" 1
	"$detailblendmode" 5
	"$yellow" "0"

	"$phong" "1"
	"$phongexponent" "10"
	"$phongboost" "9"
	"$lightwarptexture" "models/player/pyro/pyro_lightwarp"
	"$phongfresnelranges"	"[.25 1 4]"


	"$rimlight" "1"
	"$rimlightexponent" ".014"
	"$rimlightboost" "2"
	// Cloaking
	"$cloakPassEnabled" "1"

	"$sheenPassEnabled" "1"

	"$sheenmap" 		"cubemaps\cubemap_sheen001"
	"$sheenmapmask" 		"Effects\AnimatedSheen\animatedsheen0"
	"$sheenmaptint" 		"[ 1 1 1 ]"
	"$sheenmapmaskframe" 	"0"
	"$sheenindex" 		"0"

	"Proxies"
	{
		"AnimatedWeaponSheen"
		{
			"animatedtexturevar" 		"$sheenmapmask"
			"animatedtextureframenumvar" 	"$sheenmapmaskframe"
			"animatedtextureframerate" 		"40"
		}
		"Sine"
		{
			"sinemax" "1"
			"sinemin" ".25"
			"sineperiod" "2"
			"resultvar" "$detailblendfactor"
	  }
		"invis"
		{
		}
		"AnimatedTexture"
		{
			"animatedtexturevar" "$detail"
			"animatedtextureframenumvar" "$detailframe"
			"animatedtextureframerate" 30
		}
// This is commented out because it conflicts with the Sine proxy.
//		"BurnLevel"
//		{
//			"resultVar" "$detailblendfactor"
//		}
		"YellowLevel"
		{
			"resultVar" "$yellow"
		}
		"Equals"
		{
			"srcVar1"  "$yellow"
			"resultVar" "$color2"
		}
	}
}



